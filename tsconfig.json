{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES6",
    "lib": ["ESNEXT"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}
